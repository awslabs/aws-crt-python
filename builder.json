{
    "name": "aws-crt-python",
    "hosts": {
        "linux": {
            "architectures": {
                "x86": {
                    "enabled": false,
                    "image": "123124136734.dkr.ecr.us-east-1.amazonaws.com/aws-common-runtime/linux-python:x86"
                },
                "x64": {
                    "apt_packages": ["build-essential"],
                    "_comment": "on ubuntu python was using /bin/ld to link, which wasn't fully installed"
                }
            },
            "variables": {
                "openssl_include": "=/opt/openssl/include",
                "openssl_lib": "=/opt/openssl/lib"
            }
        },
        "al2012": {
            "enabled": false
        },
        "manylinux": {
            "enabled": false
        }
    },
    "targets": {
        "android": {
            "enabled": false
        }
    },
    "compilers": {
        "clang": {
            "!post_build_steps": [],
            "_comment": "don't run clang-tidy, we don't have a compile_commands.json"
        }
    },
    "upstream": [],
    "downstream": [],
    "build": [
        ["git", "submodule", "update", "--init", "--recursive"],
        ["{python}", "setup.py", "--verbose", "build_ext", "--include-dirs{openssl_include}", "--library-dirs{openssl_lib}", "install"]
    ],
    "test": [
        ["{python}", "-m", "unittest", "discover", "--buffer", "--verbose"]
    ]
}

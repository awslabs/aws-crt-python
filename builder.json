{
    "name": "aws-crt-python",
    "targets": {
        "android": {
            "enabled": false,
            "_comment": "disabled until we have a reason to support python on android"
        },
        "linux": {
            "variables": {
                "openssl_include": "{deps_dir}/libcrypto/include",
                "openssl_lib": "{deps_dir}/libcrypto"
            }
        }
    },
    "imports": [
        "libcrypto"
    ],
    "hosts": {
        "manylinux": {
            "!build_steps": [
                "manylinux-ci"
            ]
        }
    },
    "build_steps": [
        "aws-crt-python"
    ],
    "upstream": [],
    "downstream": []
}

{
    "name": "aws-crt-python",
    "hosts": {
        "linux": {
            "architectures": {
                "x86": {
                    "enabled": false,
                    "image": "123124136734.dkr.ecr.us-east-1.amazonaws.com/aws-common-runtime/linux-python:x86"
                },
                "x64": {
                    "apt_packages": ["build-essential"]
                }
            },
            "build_env": {
                "CC": "clang-6.0"
            }
        },
        "al2012": {
            "enabled": false
        },
        "manylinux": {
            "enabled": false
        },
        "windows": {
            "enabled": false
        }
    },
    "targets": {
        "android": {
            "enabled": false
        }
    },
    "compilers": {
        "clang": {
            "!post_build_steps": [],
            "_comment": "don't run clang-tidy, we don't have a compile_commands.json"
        }
    },
    "upstream": [],
    "downstream": [],
    "build": [
        ["git", "submodule", "update", "--init", "--recursive"],
        ["{python}", "setup.py", "--verbose", "build_ext", "--include-dirs=/opt/openssl/include", "--library-dirs=/opt/openssl/lib", "install"]
    ],
    "test": [
        ["{python}", "-m", "unittest", "discover"]
    ]
}
